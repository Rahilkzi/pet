    <div class="header">Browse Pets</div>

    <div class="buttons">
        <a href="#dogs" class="btn">Dogs</a>
        <a href="#cats" class="btn">Cats</a>
    
    </div>

   <div class="pet-listings">
        <!-- Dogs Section -->
        <h2 id="dogs" style="text-align: center;">Dogs</h2>
        <div class="pet-grid">
            <% pets.filter(pet => pet.category.toLowerCase() === 'dog').slice(0, 3).forEach(pet => { %>
                <div class="pet-card">
                    <img src="<%= pet.image_url || '/images/default-dog.jpg' %>" alt="<%= pet.name %>">
                    <h3><%= pet.name %></h3>
                    <p>Age: <%= pet.age %> <%= pet.age === 1 ? 'year' : 'years' %></p>
                    <p>Breed: <%= pet.breed %></p>
                    <p>Gender: <%= pet.gender || 'Unknown' %></p>
                    <a href="/adopt/<%= pet.id %>" class="adopt-btn">Adopt Me</a>
                </div>
            <% }); %>
        </div>
        
        <div class="pet-grid">
            <% pets.filter(pet => pet.category.toLowerCase() === 'dog').slice(3, 6).forEach(pet => { %>
                <div class="pet-card">
